# -*- coding: utf-8 -*-
# vim: ft=jinja

{%- set tplroot = tpldir.split('/')[0] %}
{%- import_yaml tplroot ~ "/defaults.yaml" as default_settings %}
{%- import_yaml tplroot ~ "/osfamilymap.yaml" as osfamilymap %}

{%- set _config = salt['config.get'](tplroot, default={}) %}
{%- set defaults = salt['grains.filter_by'](
      default_settings,
      default=tplroot,
      merge=salt['grains.filter_by']( osfamilymap, grain='os_family',
        merge=salt['grains.filter_by']( _config, default='lookup'
        )
      )
    )
%}
{%- set maven = salt['grains.filter_by']( {'defaults': defaults}, default='defaults', merge=_config) %}

{%- if maven.pkg.use_upstream_archive %}
    {%- set dir = '%s-%s'|format(maven.pkg.name, maven.version) %}
    {%- do maven.update({'path': maven.dir.archive + '/' + dir }) %},
    {%- do maven.pkg.archive.update({'name': maven.dir.archive + '/' + dir,
           'source': '%s/%s/%s/binaries/%s-%s-bin.%s'|format(maven.pkg.macapp.uri, maven.release, maven.version, maven.pkg.name, maven.version, maven.pkg.suffix)}) %}  # noqa 204
{%- endif %}

{%- if maven.pkg.use_upstream_source %}
    {%- set dir = '%s-%s'|format(maven.pkg.name, maven.version) %}
    {%- do maven.config.update({'path': maven.dir.archive + '/' + dir }) %},
    {%- do maven.pkg.source.update({'name': maven.dir.archive + '/' + dir,
           'source': '%s/%s/%s/source/%s-%s-bin.%s'|format(maven.pkg.macapp.uri, maven.release, maven.version, maven.pkg.name, maven.version, maven.pkg.suffix)}) %}  # noqa 204
{%- endif %}
